# Database (Postgres)
DATABASE_URL="postgresql://admin:password123@localhost:5432/com_auth_db?schema=public"

# Social Authentication (Optional)
GOOGLE_CLIENT_ID="YOUR_GOOGLE_CLIENT_ID"
APPLE_CLIENT_ID="YOUR_APPLE_CLIENT_ID"

# OIDC Configuration (Unity Gaming Services)
# OIDC_ISSUER must match your backend URL
OIDC_ISSUER="http://localhost:3000"
OIDC_AUDIENCE="unity-game-client"

# OIDC Signing Keys (Required)
# Use 'npm run generate:keys' to generate these values
OIDC_KEY_ID="uuid-v4"
OIDC_PRIVATE_KEY_BASE64="Base64EncodedPrivateKey..."
OIDC_PUBLIC_KEY_BASE64="Base64EncodedPublicKey..."
